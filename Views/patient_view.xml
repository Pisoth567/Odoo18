<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--create_views-->
    <!--take the model what we want to custom-->
    <record id="hospital_patient_view_list" model="ir.ui.view">
        <!--follow by id of the record-->
        <field name="name">hospital.patient.view.list</field>
        <!--model name-->
        <field name="model">hospital.patient</field>
        <!--architech name for add fields-->
        <field name="arch" type="xml">
            <list>
                <field name="name" class=""/>
                <field name="age" class="w-25 text-start"/>
                <field name="Gender"/>
                <field name="address"/>
            </list>
        </field>
    </record>

    <!--create action-->
    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first patient!</p>
        </field>
    </record>

    <menuitem
            id="menu_patient"
            name="Patient"
            action="action_hospital_patient"
            parent="menu_patient_master"
            sequence="0"/>
</odoo>