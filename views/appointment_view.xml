<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    create form view-->
    <record id="hospital_appointment_view_form" model="ir.ui.view">
        <field name="name">hospital.appointment.view.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="patient_id" string="Patient's Name: "/>
                            <field name="gender" />
                        </group>
                        <group>
                            <field name="booking_date"/>
                            <field name="appointment_time"/>
                        </group>
                    </group>
                </sheet>
                <!--chatter-->
                <chatter/>
            </form>
        </field>
    </record>

    <!--create search view-->
    <record id="hospital_appointment_search_view" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>
            </search>

        </field>
    </record>


    <!--create_list_views-->
    <!--take the model what we want to custom-->
    <record id="hospital_appointment_view_list" model="ir.ui.view">
        <!--follow by id of the record-->
        <field name="name">hospital.appointment.view.list</field>
        <!--model name-->
        <field name="model">hospital.appointment</field>
        <!--architech name for add fields-->
        <field name="arch" type="xml">
            <list>
                <field name="patient_id" string="Patient's Name: "/>
                <field name="appointment_time"/>
                <field name="booking_date"/>
            </list>
        </field>
    </record>

    <!--create action-->
    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first Appointment !</p>
        </field>
    </record>

    <menuitem
            id="menu_appointment"
            name="Appointment"
            action="action_hospital_appointment"
            parent="menu_appointment_master"
            sequence="20"/>
</odoo>